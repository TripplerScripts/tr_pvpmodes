{
  "name": "lenix-fivem-typescript-template",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:client && npm run build:server && npm run build:frontend",
    "build:client": "esbuild backend/client/index.ts --bundle --platform=node --target=es2020 --minify --outfile=backend/build/client.js",
    "build:server": "esbuild backend/server/index.ts --bundle --platform=node --target=es2020 --minify --outfile=backend/build/server.js",
    "build:frontend": "esbuild frontend/src/index.ts --bundle --platform=browser --target=es2020 --minify --outfile=frontend/build/index.js",
    "watch": "concurrently \"npm:watch:client\" \"npm:watch:server\" \"npm:watch:frontend\"",
    "watch:client": "esbuild backend/client/index.ts --bundle --platform=node --target=es2020 --watch --outfile=backend/build/client.js",
    "watch:server": "esbuild backend/server/index.ts --bundle --platform=node --target=es2020 --watch --outfile=backend/build/server.js",
    "watch:frontend": "esbuild frontend/src/index.ts --bundle --platform=browser --target=es2020 --watch --outfile=frontend/build/index.js"
  },
  "devDependencies": {
    "@citizenfx/client": "latest",
    "@citizenfx/server": "latest",
    "@lenixdev/ui_components": "latest",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.24.2",
    "typescript": "^5.0.0"
  }
}
