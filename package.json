{
  "name": "lenix-fivem-typescript-template",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:frontend && npm run build:client && npm run build:server",
    
    "build:frontend": "vite build --mode production",
    "build:client": "esbuild backend/client/main.ts --bundle --platform=node --target=es2020 --minify --outfile=backend/build/client.js",
    "build:server": "esbuild backend/server/main.ts --bundle --platform=node --target=es2020 --minify --outfile=backend/build/server.js",
    
    "watch": "npm run watch:frontend & npm run watch:client & npm run watch:server",
    "watch:frontend": "vite build --watch",
    "watch:client": "esbuild backend/client/main.ts --bundle --platform=node --target=es2020 --watch --outfile=backend/build/client.js",
    "watch:server": "esbuild backend/server/main.ts --bundle --platform=node --target=es2020 --watch --outfile=backend/build/server.js"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@citizenfx/client": "latest",
    "@citizenfx/server": "latest",
    "esbuild": "^0.24.2",
    "vite": "^5.4.21"
  }
}